{
    RenderFragment step1 = @<span style="font-size: 14px">Create project</span>;
    RenderFragment step2 = @<span style="font-size: 14px">Departmental preliminary review</span>;
    RenderFragment step3 = @<span style="font-size: 14px">Financial review</span>;
    RenderFragment step4 = @<span style="font-size: 14px">Finish</span>;
    RenderFragment desc1 = @<div class="title__b__1">
                                <div style="margin: 8px 0 4px">
                                    Qu Lili
                                    <Icon Type="dingding" Theme="outline" Style="color: #00A0E9; margin-left: 8px;"></Icon>
                                </div>
                                <div>2016-12-12 12:32</div>
                            </div>;
    RenderFragment desc2 = @<div style="font-size: 12px" class="title">
                                <div style="margin: 8px 0 4px">
                                    Zhou Maomao
