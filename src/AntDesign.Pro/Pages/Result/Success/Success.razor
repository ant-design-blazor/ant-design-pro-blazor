@namespace AntDesign.Pro.Pages.Result
@page "/result/success"

<GridContent>
    <Card>
        <Result Status="success"
                Title="@("Submission Success")"
                SubTitle="@("The submission results page is used to feed back the results of a series of operational tasks. If it is a simple operation, use the Message global prompt feedback. This text area can show a simple supplementary explanation. If there is a similar requirement for displaying \"documents\", the following gray area can present more complicated content.")"
                Style="margin-bottom: 16px">
            <Extra>
                <span>
                    <Button Type="primary">Back List</Button>
                    <Button>View Project</Button>
                    <Button>Print</Button>
                </span>
            </Extra>
            <ChildContent>
                <Descriptions Title="@("Project Name")">
                    <DescriptionsItem Title="@("Project ID: ")">23421</DescriptionsItem>
                    <DescriptionsItem Title="@("Principal: ")">Qu Lili</DescriptionsItem>
                    <DescriptionsItem Title="@("Effective time: ")">2016-12-12 ~ 2017-12-12</DescriptionsItem>
                </Descriptions>
                <br />
                <Steps ShowProgressDot Current="1">
                    <Step Title="step1" Description="desc1" />
                    <Step Title="step2" Description="desc2" />
                    <Step Title="step3" />
                    <Step Title="step4" />
                </Steps>
            </ChildContent>
        </Result>
    </Card>
</GridContent>

