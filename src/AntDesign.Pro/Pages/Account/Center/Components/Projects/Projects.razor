@namespace AntDesign.Pro.Pages.Account.Center

<AntList
    TItem="ListItemDataType"
    Class="coverCardList"
    Grid="_listGridType"
    DataSource="List">
    <Item Context="item">
        <Card Class="card" Hoverable Bordered>
            <Cover>
                <img alt="@item.Title" src="@item.Cover"/>
            </Cover>
            <ChildContent>
                <CardMeta>
                    <Description>@item.SubDescription</Description>
                    <Title><a>@item.Title</a></Title>
                </CardMeta>
                <div class="cardItemContent">
                    <span>@item.UpdatedAt.ToFriendlyDisplay()</span>
                    <div class="avatarList">
                        <AvatarList>
                            @foreach (var member in item.Members)
                            {
                                <AvatarListItem
                                    Size="small"
                                    Src="@member.Avatar"
                                    Tips="@member.Name"/>
                            }
                        </AvatarList>
                    </div>
                </div>
            </ChildContent>
        </Card>
    </Item>
</AntList>